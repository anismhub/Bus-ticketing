<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#F3EFE0"
    android:backgroundTint="#F3EFE0"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/imgresult">

        <LinearLayout
            android:id="@+id/LLsatu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNamaBus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="45dp"
                android:paddingTop="25dp"
                android:textColor="@color/warna2"
                android:text="Sejahtera 21"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvKodeBus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingTop="25dp"
                android:paddingRight="45dp"
                android:text="S 102"
                android:textSize="16sp"
                android:textColor="@color/warna2"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lldua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LLsatu"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="48dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logoresultberangkat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="13dp"
                android:paddingRight="30dp">

                <TextView
                    android:id="@+id/tvDarimana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medan"
                    android:textSize="13sp"
                    android:textColor="@color/warna2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvJamDarimana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00"
                    android:textColor="@color/warna2"
                    android:textSize="13sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingLeft="70dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="4.5/5"
                        android:textColor="#8C6F12"
                        android:textSize="14sp" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="58 Review"
                    android:textColor="@color/warna2"
                    android:textSize="10sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lltiga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lldua"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="48dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logoresultsampai" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="13dp"
                android:paddingRight="30dp">

                <TextView
                    android:id="@+id/tvKemana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lampung"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColorLink="@color/warna2"/>

                <TextView
                    android:id="@+id/tvJamKemana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00"
                    android:textSize="13sp"
                    android:textStyle="normal"
                    android:textColor="@color/warna2"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lltiga"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="48dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Rp"
                android:textColor="@color/warna2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="120000"
                android:textColor="@color/warna2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnBook"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/warna5"
                android:textColor="@color/warna21"
                android:gravity="center"
                android:text="Book"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>