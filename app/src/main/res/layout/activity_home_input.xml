<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EFE0"
    tools:context=".HomeInputActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/btnlogout"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="265dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="2dp"
            android:text="Logout"
            android:textColor="@color/white"
            android:backgroundTint="@color/warna21"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/loBookNowsmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/booknowsmall" />

        <ImageView
            android:id="@+id/imghome"
            android:layout_width="279dp"
            android:layout_height="265dp"
            android:layout_below="@id/loBookNowsmall"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            app:srcCompat="@drawable/bus" />

        <TextView
            android:id="@+id/tvFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imghome"
            android:layout_marginTop="0dp"
            android:text="Destinasi"
            android:textColor="@color/warna21"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/llfrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFrom"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/logofrom" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/warna5"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="outline"
                app:hintTextColor="@color/warna5">

                <EditText
                    android:id="@+id/EdFrom"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ed_border"
                    android:hint="Lokasi Awal"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="25dp"
                    android:textColor="@color/warna2"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llfrom"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/linehome" />

        <TextView
            android:id="@+id/tvto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgLine"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-30dp"
            android:text="To"
            android:textColor="@color/warna2" />

        <LinearLayout
            android:id="@+id/llTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvto"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgTo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/logoto" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/warna5"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="outline"
                app:hintTextColor="@color/warna5">

                <EditText
                    android:id="@+id/EdTo"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ed_border"
                    android:hint="Lokasi Tujuan"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="25dp"
                    android:textColor="@color/warna2"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPassDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llTo"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPassenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="78dp"
                    android:text="Passenger"
                    android:textColor="#99434242" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp"
                    android:text="Date"
                    android:textColor="#99434242" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgPassenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/logopassanger" />


                <EditText
                    android:id="@+id/EdPassenger"
                    android:layout_width="122dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/ed_border"
                    android:hint="Jumlah"
                    android:inputType="number"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imgDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    app:srcCompat="@drawable/logodate" />

                <TextView
                    android:id="@+id/EdDate"
                    android:layout_width="122dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="15sp"
                    android:background="@drawable/ed_border" />
            </LinearLayout>


            <Button
                android:id="@+id/btnFindNow"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/warna21"
                android:text="Find Now"
                android:textAllCaps="false"
                android:textColor="@color/warna6"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>


</ScrollView>